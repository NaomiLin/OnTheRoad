<%- include("../partials/header") %>


	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h1>Edit <%= travelspot.name%></h1>
		</div>
		
		<div class="col-xs-12 col-sm-4">

			<form action="/travelspots/<%= travelspot._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name = "travelspot[name]" value="<%= travelspot.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name = "travelspot[image]" value="<%= travelspot.image%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name = "travelspot[description]" value="<%= travelspot.description%>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
				
				
			</form>
			<a href = "/travelspots">Go Back</a>
		</div>
	</div>

<%- include("../partials/footer") %>